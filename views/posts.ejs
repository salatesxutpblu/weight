<h1 class="fs-1">Статьи</h1>
<div>
        <% posts.forEach(item => { %>
                <div class="list-group-item border rounded-lg">
                  <div class="m-2">
                    <a class="fs-2" href="/posts/<%= item._id %>"><%- item.title %> </a>
                    <div><%- item.description %></div>
                    <div class="d-flex gap-2">
                      <button class="btn btn-primary mb-3" type="submit"><a class="text-white text-decoration-none" href="/edit-post/<%= item._id %>">Редактировать</a></button>
                        <form method="POST" action="/delete-post/<%= item._id %>">
                        <button class="btn btn-danger mb-3" type="submit">Удалить</button>
                        </form>
                        </div>
                    </div>
                </div>
        <% }) %>
</div>
<nav aria-label="Page navigation example">
  <ul class="pagination mt-3 gap-2">
     <% pages.forEach(item => { %>
    <li class="page-item"><a class="page-link" href="/posts/?page=<%= item.number %>"><%= item.number %></a></li>
    <% }) %>
  </ul>
</nav>